<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvtagihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:background="@color/whiteBodyColor"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgtagihan"
                android:src="@drawable/li_task"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:maxWidth="90dp"
                android:layout_width="wrap_content"
                />
            <TextView
                android:id="@+id/tvnamakode"
                android:textColor="@color/profileEditTextColor"
                android:layout_toRightOf="@+id/imgtagihan"
                android:textSize="20dp"
                style="@style/viewParent.headerText.kontenttext"
                android:text="#kBohf8BKhk" />
            <TextView
                android:id="@+id/tvtanggalstatus"
                android:textColor="@color/profileEditTextColor"
                style="@style/viewParent.headerText.kontenttext"
                android:layout_below="@id/tvnamakode"
                android:layout_toRightOf="@+id/imgtagihan"
                android:text="Juli - 2020" />
            <TextView
                android:id="@+id/tvstatus"
                android:textColor="@color/color_button_default"
                style="@style/viewParent.headerText.kontenttext"
                android:layout_below="@id/tvtanggalstatus"
                android:layout_toRightOf="@+id/imgtagihan"
                android:text="Lunas"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/tvnpa"
                android:textColor="@color/profileEditTextColor"
                style="@style/viewParent.headerText.kontenttext"
                android:layout_below="@id/tvstatus"
                android:layout_toRightOf="@+id/imgtagihan"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>